<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
    {%- if (post) -%}
    <title>{{ post.title }}</title>
    <meta name="description" content="{{ post.title }}" />
    {%- else -%}
    <title>{{ title }}</title>
    <meta name="description" content="{{ title }}" />
    {%- endif -%}
    {% endblock %}
    {% include "head.njk" %}
  </head>
  <body>
    <div class="container">{{ content | safe }}</div>
  </body>
</html>
