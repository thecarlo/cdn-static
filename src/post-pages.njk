---
pagination:
  data: posts
  size: 1
  alias: post
permalink: '{{ post.title | slug }}/'
---

{% extends "layouts/base.njk" %}

{% block head %}
  <title>{{ post.title }}</title>
  <meta name="description" content="{{ post.title }}" />
{% endblock %}

<div class="row">
  <div class="column">
    <div class="post">
      <h1>{{ post.title }}</h1>

      <div class="publish-date">Published on {{ post.publishDate }}</div>

      {% if post.image !== "" %}
      <img src="/assets/images/{{post.image}}" alt="an image" />
      {% endif %}

      <p>{{ post.body | safe }}</p>
    </div>
  </div>
</div>
